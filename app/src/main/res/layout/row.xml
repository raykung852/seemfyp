<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"

    >

    <android.support.v7.widget.LinearLayoutCompat

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="0"
        app:divider="@drawable/vseparator"
        app:showDividers="middle">


        <TextView
            android:id="@+id/post_route"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_distance"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:text="taxi"
            android:textColor="#221815"
            app:divider="@drawable/vseparator" />
        <TextView
            android:id="@+id/post_transport2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_distance"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:text="taxi"
            android:textColor="#221815"
            app:divider="@drawable/vseparator" />
        <TextView
            android:id="@+id/post_time2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_distance"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:text="taxi"
            android:textColor="#221815"
            app:divider="@drawable/vseparator" />
        <TextView
            android:id="@+id/post_cost2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_distance"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:text="taxi"
            android:textColor="#221815"
            app:divider="@drawable/vseparator" />
        <TextView
            android:id="@+id/post_distance2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_distance"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:text="taxi"
            android:textColor="#221815"
            app:divider="@drawable/vseparator" />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.CardView>